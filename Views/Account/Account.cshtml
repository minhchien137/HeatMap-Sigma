@model HeatmapSystem.Models.SVN_User
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thông tin tài khoản";
    ViewData["PageName"] = "Account";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50/30 py-12 px-4">

    <!-- Header -->
    <div class="max-w-5xl mx-auto mb-12 text-center">
        <div class="inline-block mb-6">
            <div
                class="w-20 h-20 bg-red-600 rounded-3xl flex items-center justify-center mx-auto shadow-2xl shadow-red-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
        </div>
        <h1 class="text-5xl md:text-6xl font-black mb-4 leading-tight text-gray-900">
            Thông tin <span class="text-red-600">tài khoản</span>
        </h1>
        <p class="text-lg text-gray-500 font-medium">Quản lý thông tin cá nhân và bảo mật</p>
    </div>

    <div class="max-w-5xl mx-auto">

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-6 bg-green-50 border-2 border-green-200 rounded-3xl animate-fade-in">
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 mr-3" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-green-700 font-semibold">@TempData["Success"]</p>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="mb-6 p-6 bg-red-50 border-2 border-red-200 rounded-3xl animate-fade-in">
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600 mr-3" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-red-600 font-semibold">@TempData["Error"]</p>
                </div>
            </div>
        }

        <!-- Account Information Card -->
        <div class="bg-white rounded-[2.5rem] p-10 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 mb-8">
            <div class="flex items-center mb-8 pb-6 border-b border-gray-100">
                <div class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h2 class="text-2xl font-black text-gray-900">Thông tin cá nhân</h2>
            </div>

            <div class="space-y-6">
                <div class="flex items-center py-4 border-b border-gray-50">
                    <div class="w-1/3">
                        <p class="text-xs font-black uppercase tracking-widest text-gray-400">Mã SVN :</p>
                    </div>
                    <div class="w-2/3">
                        <p class="text-lg font-bold text-gray-900">@Model.SVNCode</p>
                    </div>
                </div>

                @* <div class="flex items-center py-4 border-b border-gray-50">
                    <div class="w-1/3">
                        <p class="text-xs font-black uppercase tracking-widest text-gray-400">Mật khẩu :</p>
                    </div>
                    <div class="w-2/3 flex items-center">
                        <p id="passwordDisplay" class="text-lg font-bold text-gray-900 mr-3">••••••••••</p>
                        <button type="button" onclick="toggleMainPassword()"
                            class="text-gray-400 hover:text-red-600 transition-colors">
                            <svg id="mainPasswordEye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </button>
                    </div>
                </div> *@

                <div class="flex items-center py-4 border-b border-gray-50">
                    <div class="w-1/3">
                        <p class="text-xs font-black uppercase tracking-widest text-gray-400">Ngày tạo :</p>
                    </div>
                    <div class="w-2/3">
                        <p class="text-lg font-bold text-gray-900">
                            @(Model.CreateDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                        </p>
                    </div>
                </div>

                <div class="flex items-center py-4">
                    <div class="w-1/3">
                        <p class="text-xs font-black uppercase tracking-widest text-gray-400">Đăng nhập lần cuối:</p>
                    </div>
                    <div class="w-2/3">
                        <p class="text-lg font-bold text-gray-900">
                            @(Model.LastLogin?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có thông tin")
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Grid with 3 columns -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="/Heatmap/Home" class="group">
                <div
                    class="bg-white rounded-[2rem] p-8 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 hover:shadow-[0_30px_80px_rgba(220,38,38,0.15)] hover:border-red-200 hover:-translate-y-2 transition-all duration-300">
                    <div class="flex items-center">
                        <div
                            class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4 group-hover:bg-red-600 transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-6 w-6 text-red-600 group-hover:text-white transition-colors" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-black text-gray-900 group-hover:text-red-600 transition-colors">
                                Trang chủ</h3>
                                <p class="text-sm text-gray-500">Quay lại trang chủ</p>
                            </div>
                        </div>
                    </div>
                </a>

                <a href="javascript:void(0)" onclick="showChangePasswordModal()" class="group">
                    <div
                        class="bg-white rounded-[2rem] p-8 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 hover:shadow-[0_30px_80px_rgba(220,38,38,0.15)] hover:border-red-200 hover:-translate-y-2 transition-all duration-300 cursor-pointer">
                        <div class="flex items-center">
                            <div
                                class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4 group-hover:bg-red-600 transition-all">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     class="h-6 w-6 text-red-600 group-hover:text-white transition-colors" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-black text-gray-900 group-hover:text-red-600 transition-colors">
                                    Đổi mật khẩu</h3>
                                    <p class="text-sm text-gray-500">Thay đổi mật khẩu</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/Account/DangXuat" class="group">
                        <div
                            class="bg-white rounded-[2rem] p-8 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 hover:shadow-[0_30px_80px_rgba(220,38,38,0.15)] hover:border-red-200 hover:-translate-y-2 transition-all duration-300">
                            <div class="flex items-center">
                                <div
                                    class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4 group-hover:bg-red-600 transition-all">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-6 w-6 text-red-600 group-hover:text-white transition-colors" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-lg font-black text-gray-900 group-hover:text-red-600 transition-colors">Đăng
                                        xuất</h3>
                                        <p class="text-sm text-gray-500">Thoát khỏi hệ thống</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                </div>

            </div>

            <!-- Change Password Modal -->
            <div id="changePasswordModal"
                 class="fixed inset-0 z-[100] hidden items-center justify-center px-4 bg-black/70 backdrop-blur-md transition-none duration-0">
                <div class="bg-white p-12 rounded-[2.5rem] shadow-2xl max-w-md w-full transition-none duration-0">
                    <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mb-8 mx-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                    </div>

                    <h3 class="text-3xl font-black mb-2 tracking-tight text-center text-gray-900">Đổi mật khẩu</h3>
                    <p class="text-gray-500 text-center mb-8">Vui lòng nhập thông tin bên dưới</p>

                    <form id="changePasswordForm" method="post" action="/Account/ChangePassword" class="space-y-6">
                        <div class="group relative">
                            <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Mật khẩu hiện
                                tại</label>
                                <input type="password" name="CurrentPassword" id="currentPassword" required
                                       class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 pr-12"
                                       placeholder="Nhập mật khẩu hiện tại" />
                                <button type="button" onclick="togglePasswordVisibility('currentPassword', 'currentEye')"
                                        class="absolute right-4 top-[42px] text-gray-400 hover:text-red-600 transition-colors">
                                    <svg id="currentEye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </button>
                            </div>

                            <div class="group relative">
                                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Mật khẩu
                                    mới</label>
                                    <input type="password" name="NewPassword" id="newPassword" required
                                           class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 pr-12"
                                           placeholder="Nhập mật khẩu mới" />
                                    <button type="button" onclick="togglePasswordVisibility('newPassword', 'newEye')"
                                            class="absolute right-4 top-[42px] text-gray-400 hover:text-red-600 transition-colors">
                                        <svg id="newEye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                             stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </button>
                                </div>

                                <div class="group relative">
                                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Xác nhận mật
                                        khẩu mới</label>
                                        <input type="password" name="ConfirmNewPassword" id="confirmPassword" required
                                               class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 pr-12"
                                               placeholder="Nhập lại mật khẩu mới" />
                                        <button type="button" onclick="togglePasswordVisibility('confirmPassword', 'confirmEye')"
                                                class="absolute right-4 top-[42px] text-gray-400 hover:text-red-600 transition-colors">
                                            <svg id="confirmEye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                                 viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </button>
                                    </div>

                                    <div class="flex space-x-4 mt-8">
                                        <button type="button" onclick="closeChangePasswordModal()"
                                                class="flex-1 py-4 border-2 border-gray-200 text-gray-600 rounded-2xl font-bold hover:bg-gray-50 transition-all">
                                            Hủy
                                        </button>
                                        <button type="submit"
                                                class="flex-1 py-4 bg-red-600 text-white rounded-2xl font-bold shadow-xl shadow-red-100 hover:bg-red-700 transition-all">
                                            Xác nhận
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <script>
                            // Store actual password from server
                            const actualPassword = '@Html.Raw(Model.Password ?? "")';
                            let isPasswordVisible = false;

                            // Debug: Check if password is loaded
                            console.log('Password loaded:', actualPassword ? 'Yes' : 'No');
                            console.log('Password length:', actualPassword.length);

                            function toggleMainPassword() {
                                const passwordDisplay = document.getElementById('passwordDisplay');
                                const eyeIcon = document.getElementById('mainPasswordEye');

                                isPasswordVisible = !isPasswordVisible;

                                console.log('Toggle password, visible:', isPasswordVisible);

                                if (isPasswordVisible) {
                                    passwordDisplay.textContent = actualPassword;
                                    eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l18 18" />';
                                } else {
                                    passwordDisplay.textContent = '••••••••••';
                                    eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
                                }
                            }

                            function showChangePasswordModal() {
                                const modal = document.getElementById('changePasswordModal');
                                modal.classList.remove('hidden');
                                modal.style.display = 'flex';
                            }

                            function closeChangePasswordModal() {
                                const modal = document.getElementById('changePasswordModal');
                                modal.classList.add('hidden');
                                modal.style.display = 'none';
                                document.getElementById('changePasswordForm').reset();
                            }

                            function togglePasswordVisibility(inputId, eyeId) {
                                const input = document.getElementById(inputId);
                                const eye = document.getElementById(eyeId);

                                if (input.type === 'password') {
                                    input.type = 'text';
                                    eye.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l18 18" />';
                                } else {
                                    input.type = 'password';
                                    eye.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
                                }
                            }

                            // Close modal when clicking outside
                            document.getElementById('changePasswordModal')?.addEventListener('click', function (e) {
                                if (e.target === this) {
                                    closeChangePasswordModal();
                                }
                            });
                        </script>