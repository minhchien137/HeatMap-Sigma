@{
    Layout = "_Layout";
    ViewData["Title"] = "Import Data";
    ViewData["PageName"] = "Import";
}

<div
    class="w-full max-w-5xl bg-white rounded-[3rem] shadow-[0_35px_80px_rgba(0,0,0,0.08)] overflow-hidden p-12 md:p-16 animate-fade-in mx-auto border border-gray-50 min-h-[700px]">

    <!-- Header -->
    <div class="text-center mb-12">
        <h2 class="text-gray-400 font-black uppercase tracking-[0.3em] mb-3 text-xs">Nhập dữ liệu</h2>
        <h1 class="text-5xl md:text-6xl font-black leading-[1.1] text-red-600">
            Heatmap
        </h1>
    </div>

    <!-- Form Container -->
    <div class="flex flex-col lg:flex-row gap-10 max-w-5xl mx-auto">

        <!-- Left Column - Form Fields -->
        <div class="flex-[2] space-y-6">

            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Bộ
                    phận</label>
                <select id="departmentSelect" name="Department"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                    <option value="">-- Chọn bộ phận --</option>
                    @if (ViewBag.Departments != null)
                    {
                        foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.idDepartment">@dept.nameDepartment</option>
                        }
                    }
                </select>
            </div>

            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tên</label>
                <input type="text"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 placeholder-gray-300"
                    value="Bùi Minh Chiến - Coldzy" />
            </div>

            <div class="group">
                <label
                    class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Project</label>
                <input type="text"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 placeholder-gray-300"
                    value="Water Inbox" />
            </div>

            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Week</label>
                <input type="text"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 placeholder-gray-300"
                    value="Week 4 (19/1/2026 - 25/1/2026)" />
            </div>

            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Day</label>
                <input type="date"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700"
                    value="2026-01-19" />
            </div>

            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Hour</label>
                <input type="text"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700 placeholder-gray-300"
                    value="7 giờ 30 phút" />
            </div>

        </div>

        <!-- Right Column - Image Upload -->
        <div class="flex-1 flex flex-col items-center justify-start">
            <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-3">Image User</label>
            <div
                class="w-full max-w-[240px] h-[240px] border-4 border-dashed border-gray-200 rounded-[2rem] flex flex-col items-center justify-center text-gray-400 hover:border-red-300 hover:bg-red-50/30 transition-all cursor-pointer group relative overflow-hidden">
                <div
                    class="absolute inset-0 bg-gradient-to-br from-red-50/0 to-red-100/0 group-hover:from-red-50/50 group-hover:to-red-100/30 transition-all">
                </div>
                <div class="relative z-10 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="h-12 w-12 mx-auto mb-3 text-gray-300 group-hover:text-red-400 transition-colors"
                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p class="font-bold text-xs">Click to upload</p>
                    <p class="text-[10px] mt-1 opacity-60">PNG, JPG up to 10MB</p>
                </div>
            </div>
        </div>

    </div>

    <!-- Action Button -->
    <div class="mt-12 text-center">
        <button onclick="handleSubmit()"
            class="px-12 py-4 bg-red-600 text-white rounded-2xl font-black uppercase tracking-[0.25em] text-base shadow-2xl shadow-red-200 hover:bg-red-700 hover:-translate-y-1 active:scale-[0.98] transition-all">
            Lưu dữ liệu
        </button>
    </div>

</div>

<!-- Confirm Modal -->
<div id="confirmModal"
    class="fixed inset-0 z-[100] hidden items-center justify-center px-4 bg-black/70 backdrop-blur-md transition-none duration-0">
    <div
        class="bg-white p-12 rounded-[2.5rem] shadow-2xl max-w-md w-full text-center border border-gray-100 transition-none duration-0">
        <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mb-8 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>

        <h3 class="text-3xl font-black mb-4 tracking-tight">Xác nhận?</h3>
        <p class="text-gray-500 text-lg mb-10 leading-relaxed">
            Bạn có chắc chắn muốn lưu dữ liệu này không?
        </p>

        <div class="flex space-x-5">
            <button onclick="closeModal()"
                class="flex-1 py-4 border-2 border-gray-100 rounded-2xl font-bold text-gray-400 hover:bg-gray-50 transition-all">
                Không
            </button>
            <button onclick="submitForm()"
                class="flex-1 py-4 bg-red-600 text-white rounded-2xl font-bold shadow-xl shadow-red-100 hover:bg-red-700 transition-all">
                Có, xác nhận
            </button>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div id="errorModal"
    class="fixed inset-0 z-[110] hidden items-center justify-center px-4 bg-black/70 backdrop-blur-md transition-none duration-0">
    <div
        class="bg-white p-12 rounded-[2.5rem] shadow-2xl max-w-md w-full text-center border border-gray-100 transition-none duration-0">
        <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mb-8 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        <h3 class="text-3xl font-black mb-4 tracking-tight">Thông báo</h3>
        <p id="errorModalMessage" class="text-gray-500 text-lg mb-10 leading-relaxed"></p>
        <button onclick="closeErrorModal()"
            class="w-full py-4 bg-black text-white rounded-2xl font-bold shadow-xl transition-all hover:bg-zinc-800">
            Đã hiểu
        </button>
    </div>
</div>

<script>
    function handleSubmit() {
        let valid = true;
        const inputs = document.querySelectorAll('input[type="text"], input[type="date"], select');

        inputs.forEach(input => {
            if (!input.value.trim()) {
                input.classList.add('border-red-600', 'bg-red-50');
                valid = false;
            } else {
                input.classList.remove('border-red-600', 'bg-red-50');
            }
        });

        if (!valid) {
            showErrorModal('Vui lòng nhập đầy đủ dữ liệu');
            return;
        }

        const modal = document.getElementById('confirmModal');
        modal.classList.remove('hidden');
        modal.style.display = 'flex';
    }

    function closeModal() {
        const modal = document.getElementById('confirmModal');
        modal.classList.add('hidden');
        modal.style.display = 'none';
    }

    function submitForm() {
        closeModal();
        // Success feedback
        const btn = event.target;
        btn.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

        setTimeout(() => {
            alert('✓ Đã lưu dữ liệu thành công!');
            // TODO: AJAX hoặc form.submit()
        }, 800);
    }

    function showErrorModal(message) {
        const modal = document.getElementById('errorModal');
        document.getElementById('errorModalMessage').innerText = message;
        modal.style.display = 'flex';
    }

    function closeErrorModal() {
        const modal = document.getElementById('errorModal');
        modal.style.display = 'none';
    }
</script>