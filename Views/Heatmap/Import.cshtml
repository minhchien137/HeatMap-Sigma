@{
    Layout = "_Layout";
    ViewData["Title"] = "Nhập dữ liệu";
    ViewData["PageName"] = "Import";
}

<div
    class="w-full max-w-5xl bg-white rounded-[3rem] shadow-[0_35px_80px_rgba(0,0,0,0.08)] overflow-hidden p-12 md:p-16 animate-fade-in mx-auto border border-gray-50 min-h-[700px]">

    <!-- Header -->
    <div class="text-center mb-12">
        <h2 class="text-gray-400 font-black uppercase tracking-[0.3em] mb-3 text-xs">Nhập dữ liệu</h2>
        <h1 class="text-5xl md:text-6xl font-black leading-[1.1] text-red-600">
            Heatmap
        </h1>
    </div>

    <!-- Form Container -->
    <div class="flex flex-col lg:flex-row gap-10 max-w-5xl mx-auto">

        <!-- Left Column - Form Fields -->
        <div class="flex-[2] space-y-6">

            <!-- Bộ phận Dropdown -->
            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Bộ
                    phận</label>
                <select id="department" name="department"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                    <option value="">-- Chọn bộ phận --</option>
                    @foreach (var dept in ViewBag.Departments)
                    {
                        <option value="@dept.id">@dept.dept_name</option>
                    }
                </select>
            </div>

            <!-- Tên - ĐỔI THÀNH DROPDOWN -->
            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tên</label>
                <select id="employeeSelect" name="Name"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                    <option value="">-- Chọn bộ phận trước --</option>
                </select>
            </div>

            <!-- Project Dropdown -->
            <div class="group">
                <label
                    class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Project</label>
                <select id="projectSelect" name="Project"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                    <option value="">-- Chọn dự án --</option>
                    @if (ViewBag.Projects != null)
                    {
                        foreach (var project in ViewBag.Projects)
                        {
                            <option value="@project.IdProject">@project.NameProject
                                @(!string.IsNullOrEmpty(project.NameCustomer) ? $"({project.NameCustomer})" : "")</option>
                        }
                    }
                </select>
            </div>

            <!-- Week Dropdown -->
            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tuần</label>
                <select id="weekSelect" name="Week"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                    <option value="">-- Chọn tuần --</option>
                </select>
            </div>

            <!-- Day -->
            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Ngày</label>
                <input type="date" name="Day"
                    class="w-full px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700" />
            </div>

            <!-- Hour - Giờ và Phút riêng để convert sang decimal -->
            <div class="group">
                <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Giờ</label>
                <div class="flex gap-3">
                    <select id="hourSelect"
                        class="flex-1 px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                        <option value="">Giờ</option>
                    </select>
                    <select id="minuteSelect"
                        class="flex-1 px-6 py-4 bg-gray-50 border-2 border-transparent rounded-2xl focus:bg-white focus:border-red-600 focus:ring-0 outline-none transition-all text-base text-gray-700">
                        <option value="">Phút</option>
                    </select>
                </div>
                <!-- Hidden input để lưu giá trị decimal -->
                <input type="hidden" name="Hour" id="hourDecimal" />
                <div class="mt-2 text-sm text-gray-500 ml-2" id="hourDisplay"></div>
            </div>

        </div>

        <!-- Right Column - Image Upload -->
        <div class="flex-1 flex flex-col items-center justify-start">
            <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-3">Image User</label>
            <div
                class="w-full max-w-[240px] h-[240px] border-4 border-dashed border-gray-200 rounded-[2rem] flex flex-col items-center justify-center text-gray-400 hover:border-red-300 hover:bg-red-50/30 transition-all cursor-pointer group relative overflow-hidden">
                <div
                    class="absolute inset-0 bg-gradient-to-br from-red-50/0 to-red-100/0 group-hover:from-red-50/50 group-hover:to-red-100/30 transition-all">
                </div>
                <div class="relative z-10 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                        class="h-12 w-12 mx-auto mb-3 text-gray-300 group-hover:text-red-400 transition-colors"
                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <p class="font-bold text-xs">Click to upload</p>
                    <p class="text-[10px] mt-1 opacity-60">PNG, JPG up to 10MB</p>
                </div>
            </div>
        </div>

    </div>

    <!-- Action Button -->
    <div class="mt-12 text-center">
        <button onclick="handleSubmit()"
            class="px-12 py-4 bg-red-600 text-white rounded-2xl font-black uppercase tracking-[0.25em] text-base shadow-2xl shadow-red-200 hover:bg-red-700 hover:-translate-y-1 active:scale-[0.98] transition-all">
            Lưu dữ liệu
        </button>
    </div>

</div>

<!-- Confirm Modal -->
<div id="confirmModal"
    class="fixed inset-0 z-[100] hidden items-center justify-center px-4 bg-black/70 backdrop-blur-md transition-none duration-0">
    <div
        class="bg-white p-12 rounded-[2.5rem] shadow-2xl max-w-md w-full text-center border border-gray-100 transition-none duration-0">
        <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mb-8 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>

        <h3 class="text-3xl font-black mb-4 tracking-tight">Xác nhận?</h3>
        <p class="text-gray-500 text-lg mb-10 leading-relaxed">
            Bạn có chắc chắn muốn lưu dữ liệu này không?
        </p>

        <div class="flex space-x-5">
            <button onclick="closeModal()"
                class="flex-1 py-4 border-2 border-gray-100 rounded-2xl font-bold text-gray-400 hover:bg-gray-50 transition-all">
                Không
            </button>
            <button onclick="submitForm()"
                class="flex-1 py-4 bg-red-600 text-white rounded-2xl font-bold shadow-xl shadow-red-100 hover:bg-red-700 transition-all">
                Có, xác nhận
            </button>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div id="errorModal"
    class="fixed inset-0 z-[110] hidden items-center justify-center px-4 bg-black/70 backdrop-blur-md transition-none duration-0">
    <div
        class="bg-white p-12 rounded-[2.5rem] shadow-2xl max-w-md w-full text-center border border-gray-100 transition-none duration-0">
        <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mb-8 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        <h3 class="text-3xl font-black mb-4 tracking-tight">Thông báo</h3>
        <p id="errorModalMessage" class="text-gray-500 text-lg mb-10 leading-relaxed"></p>
        <button onclick="closeErrorModal()"
            class="w-full py-4 bg-black text-white rounded-2xl font-bold shadow-xl transition-all hover:bg-zinc-800">
            Đã hiểu
        </button>
    </div>
</div>

<script>
    // THÊM: Lắng nghe sự kiện chọn bộ phận để load nhân viên
    document.addEventListener('DOMContentLoaded', function () {
        const departmentSelect = document.getElementById('department');
        const employeeSelect = document.getElementById('employeeSelect');

        departmentSelect.addEventListener('change', async function () {
            const departmentId = this.value;

            // Reset dropdown nhân viên
            employeeSelect.innerHTML = '<option value="">-- Đang tải... --</option>';

            if (departmentId) {
                try {
                    // Gọi API để lấy danh sách nhân viên
                    const response = await fetch(`/Heatmap/GetEmployeesByDepartment?departmentId=${departmentId}`);

                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }

                    const employees = await response.json();

                    // Kiểm tra nếu có lỗi trong response
                    if (employees.error) {
                        throw new Error(employees.error);
                    }

                    // Reset dropdown
                    employeeSelect.innerHTML = '<option value="">-- Chọn nhân viên --</option>';

                    // Thêm nhân viên vào dropdown
                    employees.forEach(emp => {
                        const option = document.createElement('option');
                        option.value = emp.id;

                        // Xử lý trường hợp null
                        const firstName = emp.first_name || '';
                        const lastName = emp.last_name || '';
                        const nickname = emp.nickname || '';
                        const empCode = emp.emp_code || '';

                        // Hiển thị tên đầy đủ
                        let displayName = '';
                        if (firstName || lastName) {
                            displayName = `${firstName} ${lastName}`.trim();
                            if (nickname) {
                                displayName += ` (${nickname})`;
                            }
                        } else if (empCode) {
                            displayName = `Mã NV: ${empCode}`;
                        } else {
                            displayName = `ID: ${emp.id}`;
                        }

                        option.textContent = displayName;
                        employeeSelect.appendChild(option);
                    });

                    if (employees.length === 0) {
                        employeeSelect.innerHTML = '<option value="">-- Không có nhân viên --</option>';
                    }
                } catch (error) {
                    console.error('Error loading employees:', error);
                    employeeSelect.innerHTML = '<option value="">-- Lỗi tải dữ liệu --</option>';
                    showErrorModal('Không thể tải danh sách nhân viên: ' + error.message);
                }
            } else {
                employeeSelect.innerHTML = '<option value="">-- Chọn bộ phận trước --</option>';
            }
        });

        generateWeeks();
        generateHoursAndMinutes();

        // Lắng nghe sự kiện thay đổi tuần - GIỚI HẠN CHỌN NGÀY THEO TUẦN
        const weekSelect = document.getElementById('weekSelect');
        const dayInput = document.querySelector('input[name="Day"]');

        weekSelect.addEventListener('change', function () {
            if (this.value) {
                const [week, startDate, endDate] = this.value.split('|');
                const [startDay, startMonth, startYear] = startDate.split('/');
                const [endDay, endMonth, endYear] = endDate.split('/');

                const minDate = `${startYear}-${startMonth}-${startDay}`;
                const maxDate = `${endYear}-${endMonth}-${endDay}`;

                dayInput.setAttribute('min', minDate);
                dayInput.setAttribute('max', maxDate);

                if (dayInput.value && (dayInput.value < minDate || dayInput.value > maxDate)) {
                    dayInput.value = '';
                }
            } else {
                dayInput.removeAttribute('min');
                dayInput.removeAttribute('max');
                dayInput.value = '';
            }
        });

        if (weekSelect.value) {
            weekSelect.dispatchEvent(new Event('change'));
        }

        // Convert giờ và phút sang decimal
        const hourSelect = document.getElementById('hourSelect');
        const minuteSelect = document.getElementById('minuteSelect');
        const hourDecimal = document.getElementById('hourDecimal');
        const hourDisplay = document.getElementById('hourDisplay');

        function calculateDecimal() {
            if (hourSelect.value !== '' && minuteSelect.value !== '') {
                const hours = parseInt(hourSelect.value);
                const minutes = parseInt(minuteSelect.value);
                const decimal = hours + (minutes / 60);
                hourDecimal.value = decimal.toFixed(2);
                hourDisplay.textContent = `= ${decimal.toFixed(2)} giờ`;
            } else {
                hourDecimal.value = '';
                hourDisplay.textContent = '';
            }
        }

        hourSelect.addEventListener('change', calculateDecimal);
        minuteSelect.addEventListener('change', calculateDecimal);
    });

    // Hàm tính số tuần trong năm
    function getWeekNumber(date) {
        const d = new Date(Date.UTC(date.getFullYear(), date.getMonth(), date.getDate()));
        const dayNum = d.getUTCDay() || 7;
        d.setUTCDate(d.getUTCDate() + 4 - dayNum);
        const yearStart = new Date(Date.UTC(d.getUTCFullYear(), 0, 1));
        const weekNo = Math.ceil((((d - yearStart) / 86400000) + 1) / 7);
        return weekNo;
    }

    function getMonday(date) {
        const d = new Date(date);
        const day = d.getDay();
        const diff = d.getDate() - day + (day === 0 ? -6 : 1);
        return new Date(d.setDate(diff));
    }

    function formatDate(date) {
        const day = String(date.getDate()).padStart(2, '0');
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
    }

    function generateWeeks() {
        const weekSelect = document.getElementById('weekSelect');
        const currentYear = new Date().getFullYear();
        const currentWeek = getWeekNumber(new Date());

        while (weekSelect.options.length > 1) {
            weekSelect.remove(1);
        }

        for (let week = 1; week <= 52; week++) {
            const jan1 = new Date(currentYear, 0, 1);
            const daysOffset = (week - 1) * 7;
            const weekDate = new Date(jan1.setDate(jan1.getDate() + daysOffset));
            const monday = getMonday(weekDate);

            const sunday = new Date(monday);
            sunday.setDate(monday.getDate() + 6);

            const weekText = `Tuần ${week} (${formatDate(monday)} - ${formatDate(sunday)})`;
            const weekValue = `${week}|${formatDate(monday)}|${formatDate(sunday)}`;

            const option = document.createElement('option');
            option.value = weekValue;
            option.textContent = weekText;

            if (week === currentWeek) {
                option.selected = true;
            }

            weekSelect.appendChild(option);
        }
    }

    function generateHoursAndMinutes() {
        const hourSelect = document.getElementById('hourSelect');
        const minuteSelect = document.getElementById('minuteSelect');

        for (let h = 0; h <= 23; h++) {
            const option = document.createElement('option');
            option.value = h;
            option.textContent = String(h).padStart(2, '0');
            hourSelect.appendChild(option);
        }

        for (let m = 0; m <= 59; m++) {
            const option = document.createElement('option');
            option.value = m;
            option.textContent = String(m).padStart(2, '0');
            minuteSelect.appendChild(option);
        }
    }

    function handleSubmit() {
        let valid = true;
        const inputs = document.querySelectorAll('input[type="text"], input[type="date"], select:not(#hourSelect):not(#minuteSelect)');

        inputs.forEach(input => {
            if (!input.value.trim()) {
                input.classList.add('border-red-600', 'bg-red-50');
                valid = false;
            } else {
                input.classList.remove('border-red-600', 'bg-red-50');
            }
        });

        const hourSelect = document.getElementById('hourSelect');
        const minuteSelect = document.getElementById('minuteSelect');
        const hourDecimal = document.getElementById('hourDecimal');

        if (!hourDecimal.value) {
            hourSelect.classList.add('border-red-600', 'bg-red-50');
            minuteSelect.classList.add('border-red-600', 'bg-red-50');
            valid = false;
        } else {
            hourSelect.classList.remove('border-red-600', 'bg-red-50');
            minuteSelect.classList.remove('border-red-600', 'bg-red-50');
        }

        if (!valid) {
            showErrorModal('Vui lòng nhập đầy đủ dữ liệu');
            return;
        }

        const modal = document.getElementById('confirmModal');
        modal.classList.remove('hidden');
        modal.style.display = 'flex';
    }

    function closeModal() {
        const modal = document.getElementById('confirmModal');
        modal.classList.add('hidden');
        modal.style.display = 'none';
    }

    function submitForm() {
        closeModal();

        const btn = event.target;
        btn.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';

        setTimeout(() => {
            alert('✓ Đã lưu dữ liệu thành công!');
        }, 800);
    }

    function showErrorModal(message) {
        const modal = document.getElementById('errorModal');
        document.getElementById('errorModalMessage').innerText = message;
        modal.style.display = 'flex';
    }

    function closeErrorModal() {
        const modal = document.getElementById('errorModal');
        modal.style.display = 'none';
    }
</script>