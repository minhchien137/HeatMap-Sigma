@{
    Layout = "_Layout";
    ViewData["Title"] = "Dữ liệu nhân viên";
    ViewData["PageName"] = "Staff";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50/30 py-12 px-4">
    <div class="max-w-[1800px] mx-auto">

        <!-- Header Section -->
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-black mb-4">
                <span class="bg-gradient-to-r from-gray-900 to-red-600 bg-clip-text text-transparent">Dữ liệu</span>
                <span class="text-gray-900"> nhân viên</span>
            </h1>
            <p class="text-gray-500 text-lg">Xem và quản lý thông tin nhân viên trong hệ thống</p>
        </div>

        <!-- Filter Section -->
        <div
            class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 p-8 md:p-10 mb-8">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                </div>
                <h3 class="text-2xl font-black text-gray-900">Bộ lọc & Tìm kiếm</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5">
                <!-- Bộ phận -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Bộ
                        phận</label>
                    <select id="filterDepartment" class="filter-field" onchange="applyFilters()">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Giới tính -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Giới
                        tính</label>
                    <select id="filterGender" class="filter-field" onchange="applyFilters()">
                        <option value="">-- Tất cả --</option>
                        <option value="M">Nam</option>
                        <option value="F">Nữ</option>
                    </select>
                </div>

                <!-- Trạng thái -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Trạng
                        thái</label>
                    <select id="filterStatus" class="filter-field" onchange="applyFilters()">
                        <option value="">-- Tất cả --</option>
                        <option value="0" selected>Đang làm việc</option>
                        <option value="100">Đã nghỉ việc</option>
                    </select>
                </div>

                <!-- Tìm kiếm -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tìm
                        kiếm</label>
                    <div class="relative">
                        <input type="text" id="searchInput" placeholder="SVN, Tên nhân viên..."
                            class="filter-field pr-12" onkeyup="applyFilters()">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-gray-400 absolute right-4 top-1/2 -translate-y-1/2" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-4 mt-6">
                <button onclick="resetFilters()" class="action-btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Đặt lại
                </button>
                <button onclick="exportToExcel()" class="action-btn-outline">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Xuất Excel
                </button>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Tổng nhân viên</p>
                        <p class="text-3xl font-black text-gray-900" id="totalEmployees">0</p>
                    </div>
                    <div class="w-14 h-14 bg-red-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-red-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Đang làm việc</p>
                        <p class="text-3xl font-black text-green-600" id="activeEmployees">0</p>
                    </div>
                    <div class="w-14 h-14 bg-green-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-green-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Đã nghỉ việc</p>
                        <p class="text-3xl font-black text-gray-500" id="inactiveEmployees">0</p>
                    </div>
                    <div class="w-14 h-14 bg-gray-100 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-gray-500" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Bộ phận</p>
                        <p class="text-3xl font-black text-gray-900" id="totalDepartments">0</p>
                    </div>
                    <div class="w-14 h-14 bg-blue-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-blue-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div
            class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 overflow-hidden">
            <!-- Table Header -->
            <div class="px-10 py-8 border-b border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-2xl font-black text-gray-900">Danh sách nhân viên</h3>
                        <p class="text-sm text-gray-500 mt-1">Hiển thị <span id="showingRecords">0</span></p>
                    </div>
                    <div class="flex items-center gap-4">
                        <label class="text-sm font-bold text-gray-600">Số bản ghi/trang:</label>
                        <select id="recordsPerPage" onchange="changeRecordsPerPage()"
                            class="px-4 py-2 border-2 border-gray-200 rounded-xl font-bold text-sm focus:border-red-600 outline-none">
                            <option value="10">10</option>
                            <option value="25" selected>25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Table Content -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-50">
                            <th class="table-header cursor-pointer hover:bg-gray-100 transition-colors"
                                onclick="sortTable('emp_code')">
                                <div class="flex items-center gap-2">
                                    SVN Code
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
                                    </svg>
                                </div>
                            </th>
                            <th class="table-header cursor-pointer hover:bg-gray-100 transition-colors"
                                onclick="sortTable('full_name')">
                                <div class="flex items-center gap-2">
                                    Họ và tên
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
                                    </svg>
                                </div>
                            </th>
                            <th class="table-header text-center">Giới tính</th>
                            <th class="table-header text-center">Ngày sinh</th>
                            <th class="table-header">Thành phố</th>
                            <th class="table-header text-center">Ngày vào làm</th>
                            <th class="table-header">Bộ phận</th>
                            <th class="table-header text-center">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody id="dataTableBody">
                        <tr>
                            <td colspan="8" class="text-center py-20">
                                <div class="flex flex-col items-center justify-center">
                                    <div
                                        class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4 animate-pulse">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                        </svg>
                                    </div>
                                    <p class="text-gray-400 text-lg font-bold">Đang tải dữ liệu...</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="px-10 py-6 border-t border-gray-100 bg-gray-50">
                <div class="flex items-center justify-center">
                    <div class="flex items-center gap-2" id="paginationContainer">
                        <!-- Pagination buttons will be generated here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Home Button -->
        <div class="text-center mt-10">
            <a href="/Heatmap/Home"
                class="inline-flex items-center gap-3 px-8 py-4 bg-gray-900 text-white rounded-2xl font-bold hover:bg-gray-800 transition-all shadow-xl hover:shadow-2xl hover:-translate-y-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Về trang chủ
            </a>
        </div>
    </div>
</div>

<style>
    .filter-field {
        width: 100%;
        padding: 0.875rem 1.25rem;
        background-color: #f9fafb;
        border: 2px solid transparent;
        border-radius: 1rem;
        outline: none;
        transition: all 0.3s;
        font-size: 0.9375rem;
        color: #374151;
        font-weight: 500;
    }

    .filter-field:focus {
        background-color: white;
        border-color: #dc2626;
    }

    .action-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background-color: #dc2626;
        color: white;
        border-radius: 1rem;
        font-weight: 700;
        font-size: 0.875rem;
        box-shadow: 0 10px 25px rgba(220, 38, 38, 0.2);
        transition: all 0.3s;
        border: 2px solid transparent;
    }

    .action-btn-primary:hover {
        background-color: #b91c1c;
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(220, 38, 38, 0.3);
    }

    .action-btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background-color: white;
        color: #6b7280;
        border: 2px solid #e5e7eb;
        border-radius: 1rem;
        font-weight: 700;
        font-size: 0.875rem;
        transition: all 0.3s;
    }

    .action-btn-secondary:hover {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .action-btn-outline {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background-color: white;
        color: #374151;
        border: 2px solid #d1d5db;
        border-radius: 1rem;
        font-weight: 700;
        font-size: 0.875rem;
        transition: all 0.3s;
    }

    .action-btn-outline:hover {
        border-color: #374151;
        background-color: #f9fafb;
    }

    .table-header {
        padding: 1rem 1.5rem;
        text-align: left;
        font-size: 0.75rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #9ca3af;
    }

    .table-cell {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #f3f4f6;
        font-size: 0.9375rem;
        color: #374151;
    }

    .badge {
        display: inline-block;
        padding: 0.375rem 0.875rem;
        border-radius: 0.625rem;
        font-size: 0.8125rem;
        font-weight: 700;
    }

    .badge-gray {
        background-color: #f3f4f6;
        color: #6b7280;
    }

    .badge-red {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .badge-green {
        background-color: #dcfce7;
        color: #16a34a;
    }

    .badge-blue {
        background-color: #dbeafe;
        color: #2563eb;
    }

    .pagination-btn {
        padding: 0.5rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-weight: 700;
        font-size: 0.875rem;
        color: #6b7280;
        background-color: white;
        transition: all 0.2s;
        min-width: 2.5rem;
    }

    .pagination-btn:hover:not(:disabled) {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .pagination-btn.active {
        border-color: #dc2626;
        color: white;
        background-color: #dc2626;
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
    }

    .pagination-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }
</style>

<script src="~/js/staff.js"></script>