@{
    Layout = "_Layout";
    ViewData["Title"] = "Cài đặt hệ thống";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50/30 py-12 px-4">

    <!-- Header -->
    <div class="max-w-5xl mx-auto mb-12 text-center">
        <div class="inline-block mb-6">
            <div
                class="w-20 h-20 bg-red-600 rounded-3xl flex items-center justify-center mx-auto shadow-2xl shadow-red-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
        </div>
        <h1 class="text-5xl md:text-6xl font-black mb-4 leading-tight text-gray-900">
            Cài đặt <span class="text-red-600">hệ thống</span>
        </h1>
        <p class="text-lg text-gray-500 font-medium">Tùy chỉnh trải nghiệm của bạn</p>
    </div>

    <div class="max-w-5xl mx-auto">

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-6 bg-green-50 border-2 border-green-200 rounded-3xl animate-fade-in">
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 mr-3" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-green-700 font-semibold">@TempData["Success"]</p>
                </div>
            </div>
        }

        <!-- Settings Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">

            <!-- Language Settings Card -->
            <div
                class="bg-white rounded-[2.5rem] p-10 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 h-full">
                <div class="flex items-center mb-8 pb-6 border-b border-gray-100">
                    <div class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-black text-gray-900">Ngôn ngữ</h2>
                </div>

                <div class="space-y-4">
                    <p class="text-gray-600 mb-6">Chọn ngôn ngữ hiển thị cho hệ thống</p>

                    <div class="space-y-4">
                        <!-- Vietnamese -->
                        <label class="relative cursor-pointer group block">
                            <input type="radio" name="language" value="vi" checked class="peer hidden"
                                onchange="changeLanguage('vi')">
                            <div
                                class="p-6 border-2 border-gray-200 rounded-2xl peer-checked:border-red-600 peer-checked:bg-red-50 hover:border-red-300 transition-all">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <div
                                            class="w-14 h-14 rounded-xl bg-white shadow-sm border border-gray-100 flex items-center justify-center mr-4 overflow-hidden">
                                            <img src="~/images/vn.png" alt="Tiếng Việt"
                                                class="w-10 h-10 object-contain">
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-gray-900 text-lg">Tiếng Việt</h3>
                                            <p class="text-sm text-gray-500">Vietnamese</p>
                                        </div>
                                    </div>
                                    <div
                                        class="w-6 h-6 rounded-full border-2 border-gray-300 peer-checked:border-red-600 peer-checked:bg-red-600 flex items-center justify-center">
                                        <svg class="w-4 h-4 text-white hidden peer-checked:block" fill="currentColor"
                                            viewBox="0 0 20 20">
                                            <path
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </label>

                        <!-- English -->
                        <label class="relative cursor-pointer group block">
                            <input type="radio" name="language" value="en" class="peer hidden"
                                onchange="changeLanguage('en')">
                            <div
                                class="p-6 border-2 border-gray-200 rounded-2xl peer-checked:border-red-600 peer-checked:bg-red-50 hover:border-red-300 transition-all">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <div
                                            class="w-14 h-14 rounded-xl bg-white shadow-sm border border-gray-100 flex items-center justify-center mr-4 overflow-hidden">
                                            <img src="~/images/en.png" alt="English" class="w-10 h-10 object-contain">
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-gray-900 text-lg">English</h3>
                                            <p class="text-sm text-gray-500">Tiếng Anh</p>
                                        </div>
                                    </div>
                                    <div
                                        class="w-6 h-6 rounded-full border-2 border-gray-300 peer-checked:border-red-600 peer-checked:bg-red-600 flex items-center justify-center">
                                        <svg class="w-4 h-4 text-white hidden peer-checked:block" fill="currentColor"
                                            viewBox="0 0 20 20">
                                            <path
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Theme Settings Card -->
            <div
                class="bg-white rounded-[2.5rem] p-10 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 h-full">
                <div class="flex items-center mb-8 pb-6 border-b border-gray-100">
                    <div class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-black text-gray-900">Giao diện</h2>
                </div>

                <div class="space-y-4">
                    <p class="text-gray-600 mb-6">Chọn chủ đề giao diện phù hợp với bạn</p>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <!-- Light Theme -->
                        <label class="relative cursor-pointer group">
                            <input type="radio" name="theme" value="light" checked class="peer hidden"
                                onchange="changeTheme('light')">
                            <div
                                class="p-6 border-2 border-gray-200 rounded-2xl peer-checked:border-red-600 peer-checked:bg-red-50 hover:border-red-300 transition-all">
                                <div class="mb-4">
                                    <div
                                        class="w-full h-24 bg-gradient-to-br from-gray-50 to-white rounded-xl border-2 border-gray-200 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-yellow-500"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <h3 class="font-bold text-center text-gray-900 mb-1">Sáng</h3>
                                <p class="text-xs text-center text-gray-500">Light</p>
                            </div>
                        </label>

                        <!-- Dark Theme -->
                        <label class="relative cursor-pointer group">
                            <input type="radio" name="theme" value="dark" class="peer hidden"
                                onchange="changeTheme('dark')">
                            <div
                                class="p-6 border-2 border-gray-200 rounded-2xl peer-checked:border-red-600 peer-checked:bg-red-50 hover:border-red-300 transition-all">
                                <div class="mb-4">
                                    <div
                                        class="w-full h-24 bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl border-2 border-gray-700 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-blue-400"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                                        </svg>
                                    </div>
                                </div>
                                <h3 class="font-bold text-center text-gray-900 mb-1">Tối</h3>
                                <p class="text-xs text-center text-gray-500">Dark</p>
                            </div>
                        </label>

                        <!-- Auto Theme -->
                        <label class="relative cursor-pointer group">
                            <input type="radio" name="theme" value="auto" class="peer hidden"
                                onchange="changeTheme('auto')">
                            <div
                                class="p-6 border-2 border-gray-200 rounded-2xl peer-checked:border-red-600 peer-checked:bg-red-50 hover:border-red-300 transition-all">
                                <div class="mb-4">
                                    <div
                                        class="w-full h-24 bg-gradient-to-r from-gray-50 via-gray-300 to-gray-800 rounded-xl border-2 border-gray-200 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-600"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                        </svg>
                                    </div>
                                </div>
                                <h3 class="font-bold text-center text-gray-900 mb-1">Tự động</h3>
                                <p class="text-xs text-center text-gray-500">Auto</p>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

        </div>

        <!-- Additional Settings Cards (keeping same as before) -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

            <a href="/Heatmap/Home" class="group">
                <div
                    class="bg-white rounded-[2rem] p-8 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 hover:shadow-[0_30px_80px_rgba(220,38,38,0.15)] hover:border-red-200 hover:-translate-y-2 transition-all duration-300">
                    <div class="flex items-center">
                        <div
                            class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4 group-hover:bg-red-600 transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-red-600 group-hover:text-white transition-colors" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-black text-gray-900 group-hover:text-red-600 transition-colors">
                                Trang chủ</h3>
                            <p class="text-sm text-gray-500">Quay lại trang chủ</p>
                        </div>
                    </div>
                </div>
            </a>

            <!-- Account Settings (placeholder) -->
            <a href="/Account/Account" class="group">
                <div
                    class="bg-white rounded-[2rem] p-8 shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 hover:shadow-[0_30px_80px_rgba(220,38,38,0.15)] hover:border-red-200 hover:-translate-y-2 transition-all duration-300">
                    <div class="flex items-center">
                        <div
                            class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center mr-4 group-hover:bg-red-600 transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-red-600 group-hover:text-white transition-colors" fill="none"
                                viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-black text-gray-900 group-hover:text-red-600 transition-colors">
                                Tài khoản</h3>
                            <p class="text-sm text-gray-500">Quản lý tài khoản</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    </div>

    <script>
        // Load saved settings from localStorage
        window.addEventListener('DOMContentLoaded', function () {
            // Load language
            const savedLanguage = localStorage.getItem('language') || 'vi';
            const languageRadio = document.querySelector(`input[name="language"][value="${savedLanguage}"]`);
            if (languageRadio) {
                languageRadio.checked = true;
            }

            // Load theme
            const savedTheme = localStorage.getItem('theme') || 'light';
            const themeRadio = document.querySelector(`input[name="theme"][value="${savedTheme}"]`);
            if (themeRadio) {
                themeRadio.checked = true;
            }

            // Apply theme
            applyTheme(savedTheme);
        });

        function changeLanguage(lang) {
            localStorage.setItem('language', lang);

            // Show success message
            showNotification(`Đã chuyển sang ${lang === 'vi' ? 'Tiếng Việt' : 'English'}`);

            // In real app, you would reload the page or update all text elements
            // window.location.reload();
        }

        function changeTheme(theme) {
            localStorage.setItem('theme', theme);
            applyTheme(theme);

            // Show success message
            const themeNames = {
                'light': 'Sáng',
                'dark': 'Tối',
                'auto': 'Tự động'
            };
            showNotification(`Đã chuyển sang chế độ ${themeNames[theme]}`);
        }

        function applyTheme(theme) {
            const html = document.documentElement;

            if (theme === 'auto') {
                // Check system preference
                const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                theme = prefersDark ? 'dark' : 'light';
            }

            if (theme === 'dark') {
                html.classList.add('dark');
            } else {
                html.classList.remove('dark');
            }
        }

        function showNotification(message) {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 z-50 bg-green-50 border-2 border-green-200 text-green-700 px-6 py-4 rounded-2xl shadow-xl animate-fade-in';
            notification.innerHTML = `
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="font-semibold">${message}</span>
            </div>
        `;

            document.body.appendChild(notification);

            // Remove after 3 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateY(-20px)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Listen for system theme changes
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'auto') {
                applyTheme('auto');
            }
        });
    </script>

    <style>
        @@keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fade-in 0.3s ease-out;
        }

        /* Custom radio button styling */
        input[type="radio"]:checked+div {
            transform: scale(1.02);
        }

        /* Dark mode support (optional, for future implementation) */
        @@media (prefers-color-scheme: dark) {
            .dark body {
                background: #1a1a1a;
            }

            .dark .bg-white {
                background: #2a2a2a;
            }

            .dark .text-gray-900 {
                color: #f3f4f6;
            }
        }
    </style>