@model IEnumerable<HeatmapSystem.Models.SVN_StaffDetail>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Lịch sử nhập dữ liệu";
    ViewData["PageName"] = "History";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50/30 py-12 px-4">
    <div class="max-w-[1600px] mx-auto">

        <!-- Header Section -->
        <div class="text-center mb-12">
            <h1 class="text-5xl md:text-6xl font-black mb-4">
                <span class="bg-gradient-to-r from-gray-900 to-red-600 bg-clip-text text-transparent">Lịch sử</span>
                <span class="text-gray-900"> nhập dữ liệu</span>
            </h1>
            <p class="text-gray-500 text-lg">Xem và quản lý các bản ghi đã nhập vào hệ thống</p>
        </div>

        <!-- Filter Section -->
        <div
            class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 p-8 md:p-10 mb-8">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-red-50 rounded-2xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                </div>
                <h3 class="text-2xl font-black text-gray-900">Bộ lọc & Tìm kiếm</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-5">
                <!-- Bộ phận -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Bộ
                        phận</label>
                    <select id="filterDepartment" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Dự án -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Dự
                        án</label>
                    <select id="filterProject" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Năm -->
                <div class="group">
                    <label
                        class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Năm</label>
                    <select id="filterYear" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Tuần -->
                <div class="group">
                    <label
                        class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tuần</label>
                    <select id="filterWeek" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Tìm kiếm -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tìm
                        kiếm</label>
                    <div class="relative">
                        <input type="text" id="searchInput" placeholder="Tên nhân viên, SVN..."
                            class="filter-field pr-12">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-gray-400 absolute right-4 top-1/2 -translate-y-1/2" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-wrap gap-4 mt-6">
                <button onclick="applyFilters()" class="action-btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                    Áp dụng bộ lọc
                </button>
                <button onclick="resetFilters()" class="action-btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Đặt lại
                </button>
                <button onclick="exportToExcel()" class="action-btn-secondary ml-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Xuất Excel
                </button>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Tổng bản ghi</p>
                        <p class="text-3xl font-black text-gray-900" id="totalRecords">0</p>
                    </div>
                    <div class="w-14 h-14 bg-red-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-red-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Nhân viên</p>
                        <p class="text-3xl font-black text-gray-900" id="totalStaff">0</p>
                    </div>
                    <div class="w-14 h-14 bg-blue-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-blue-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Dự án</p>
                        <p class="text-3xl font-black text-gray-900" id="totalProjects">0</p>
                    </div>
                    <div class="w-14 h-14 bg-green-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-green-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-black uppercase tracking-wider text-gray-400 mb-1">Tổng giờ</p>
                        <p class="text-3xl font-black text-gray-900" id="totalHours">0</p>
                    </div>
                    <div class="w-14 h-14 bg-purple-50 rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-purple-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div
            class="bg-white rounded-[2.5rem] shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 overflow-hidden">
            <!-- Table Header -->
            <div class="px-10 py-8 border-b border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-2xl font-black text-gray-900">Danh sách bản ghi</h3>
                        <p class="text-sm text-gray-500 mt-1">Hiển thị <span id="showingRecords">0</span> bản ghi</p>
                    </div>
                    <div class="flex gap-3">
                        <button onclick="sortTable('WorkDate')" class="sort-btn" id="sortWorkDate">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                            </svg>
                            Ngày làm việc
                        </button>
                    </div>
                </div>
            </div>

            <!-- Table Content -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-50">
                            @* <th class="table-header text-center" style="width: 60px;">#</th> *@
                            <th class="table-header cursor-pointer hover:bg-gray-100 transition-colors"
                                onclick="sortTable('SVNStaff')">
                                <div class="flex items-center gap-2">
                                    SVN Code
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
                                    </svg>
                                </div>
                            </th>
                            <th class="table-header cursor-pointer hover:bg-gray-100 transition-colors"
                                onclick="sortTable('NameStaff')">
                                <div class="flex items-center gap-2">
                                    Tên nhân viên
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
                                    </svg>
                                </div>
                            </th>
                            <th class="table-header">Bộ phận</th>
                            <th class="table-header">Dự án</th>
                            <th class="table-header text-center">Ngày làm việc</th>
                            <th class="table-header text-center">Tuần</th>
                            <th class="table-header text-center">Năm</th>
                            <th class="table-header text-right">Giờ làm</th>
                            <th class="table-header">Người tạo</th>
                            <th class="table-header text-center">Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody id="dataTableBody">
                        <!-- Data will be loaded here via JavaScript -->
                        <tr>
                            <td colspan="11" class="text-center py-20">
                                <div class="flex flex-col items-center justify-center">
                                    <div
                                        class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-400"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                                        </svg>
                                    </div>
                                    <p class="text-gray-500 text-lg font-semibold">Đang tải dữ liệu...</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="px-10 py-6 border-t border-gray-100 bg-gray-50">
                <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                    <div class="flex items-center gap-3">
                        <label class="text-sm font-bold text-gray-600">Số bản ghi/trang:</label>
                        <select id="recordsPerPage" onchange="changeRecordsPerPage()"
                            class="px-4 py-2 border-2 border-gray-200 rounded-xl font-bold text-sm focus:border-red-600 focus:outline-none transition-colors">
                            <option value="10">10</option>
                            <option value="25" selected>25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>

                    <div class="flex items-center gap-2" id="paginationContainer">
                        <!-- Pagination buttons will be generated here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Back to Home Button -->
        <div class="text-center mt-10">
            <a href="/Heatmap/Home"
                class="inline-flex items-center gap-3 px-8 py-4 bg-gray-900 text-white rounded-2xl font-bold hover:bg-gray-800 transition-all shadow-xl hover:shadow-2xl hover:-translate-y-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Về trang chủ
            </a>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal"
    class="fixed inset-0 z-[100] hidden items-center justify-center px-4 bg-black/70 backdrop-blur-md">
    <div class="bg-white p-12 rounded-[2.5rem] shadow-2xl max-w-md w-full text-center border border-gray-100">
        <div class="w-20 h-20 bg-red-50 rounded-full flex items-center justify-center mb-8 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
        </div>
        <h3 class="text-3xl font-black mb-4 tracking-tight">Xác nhận xóa?</h3>
        <p class="text-gray-500 text-lg mb-10 leading-relaxed">Bạn có chắc chắn muốn xóa bản ghi này không? Hành động
            này không thể hoàn tác.</p>
        <div class="flex space-x-5">
            <button onclick="closeDeleteModal()"
                class="flex-1 py-4 border-2 border-gray-100 rounded-2xl font-bold text-gray-400 hover:bg-gray-50 transition-all">
                Hủy
            </button>
            <button onclick="confirmDelete()"
                class="flex-1 py-4 bg-red-600 text-white rounded-2xl font-bold shadow-xl shadow-red-100 hover:bg-red-700 transition-all">
                Xóa
            </button>
        </div>
    </div>
</div>

<style>
    .filter-field {
        width: 100%;
        padding: 0.875rem 1.25rem;
        background-color: #f9fafb;
        border: 2px solid transparent;
        border-radius: 1rem;
        outline: none;
        transition: all 0.3s;
        font-size: 0.95rem;
        color: #374151;
        font-weight: 500;
    }

    .filter-field:focus {
        background-color: white;
        border-color: #dc2626;
    }

    .action-btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        background-color: #dc2626;
        color: white;
        border-radius: 1rem;
        font-weight: 700;
        font-size: 0.9rem;
        transition: all 0.3s;
        box-shadow: 0 10px 25px rgba(220, 38, 38, 0.15);
    }

    .action-btn-primary:hover {
        background-color: #b91c1c;
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(220, 38, 38, 0.25);
    }

    .action-btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.75rem;
        background-color: white;
        color: #374151;
        border: 2px solid #e5e7eb;
        border-radius: 1rem;
        font-weight: 700;
        font-size: 0.9rem;
        transition: all 0.3s;
    }

    .action-btn-secondary:hover {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .sort-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        background-color: white;
        color: #6b7280;
        border: 2px solid #e5e7eb;
        border-radius: 0.875rem;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s;
    }

    .sort-btn:hover {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .table-header {
        padding: 1rem 1.5rem;
        text-align: left;
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #6b7280;
    }

    .table-cell {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #f3f4f6;
        font-size: 0.9rem;
        color: #374151;
    }

    .table-row {
        transition: all 0.2s;
    }

    .table-row:hover {
        background-color: #fef2f2;
    }

    .badge {
        display: inline-block;
        padding: 0.375rem 0.875rem;
        border-radius: 0.75rem;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .badge-red {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .badge-blue {
        background-color: #dbeafe;
        color: #2563eb;
    }

    .badge-green {
        background-color: #dcfce7;
        color: #16a34a;
    }

    .action-icon {
        width: 2rem;
        height: 2rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        transition: all 0.2s;
        cursor: pointer;
    }

    .action-icon:hover {
        transform: scale(1.1);
    }

    .pagination-btn {
        padding: 0.5rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-weight: 700;
        font-size: 0.875rem;
        color: #6b7280;
        background-color: white;
        transition: all 0.2s;
        min-width: 2.5rem;
    }

    .pagination-btn:hover:not(:disabled) {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .pagination-btn.active {
        border-color: #dc2626;
        color: white;
        background-color: #dc2626;
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.2);
    }

    .pagination-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }
</style>

<script src="~/js/history.js"></script>