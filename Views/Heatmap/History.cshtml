@model IEnumerable<HeatmapSystem.Models.SVN_StaffDetail>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Lịch sử nhập dữ liệu";
    ViewData["PageName"] = "History";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50/30 py-6 md:py-12 px-3 sm:px-4 md:px-6">
    <div class="max-w-[1600px] mx-auto">

        <!-- Header Section -->
        <div class="text-center mb-8 md:mb-12">
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black mb-3 md:mb-4">
                <span class="bg-gradient-to-r from-gray-900 to-red-600 bg-clip-text text-transparent">Lịch sử</span>
                <span class="text-gray-900"> nhập dữ liệu</span>
            </h1>
            <p class="text-gray-500 text-sm sm:text-base md:text-lg px-4">Xem và quản lý các bản ghi đã nhập vào hệ thống</p>
        </div>

        <!-- Filter Section -->
        <div class="bg-white rounded-2xl md:rounded-[2.5rem] shadow-[0_10px_30px_rgba(0,0,0,0.06)] md:shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 p-4 sm:p-6 md:p-8 lg:p-10 mb-6 md:mb-8">
            <div class="flex items-center gap-2 sm:gap-3 mb-4 sm:mb-5 md:mb-6">
                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-50 rounded-xl md:rounded-2xl flex items-center justify-center flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-red-600" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                </div>
                <h3 class="text-lg sm:text-xl md:text-2xl font-black text-gray-900">Bộ lọc & Tìm kiếm</h3>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-8 gap-3 sm:gap-4 md:gap-5">
                <!-- Bộ phận -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Bộ
                        phận</label>
                    <select id="filterDepartment" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                  <!-- Customer -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Customer</label>
                    <select id="filterCustomer" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>


                <!-- Dự án -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Dự
                        án</label>
                    <select id="filterProject" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Năm -->
                <div class="group">
                    <label
                        class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Năm</label>
                    <select id="filterYear" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Tuần -->
                <div class="group">
                    <label
                        class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tuần</label>
                    <select id="filterWeek" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Project Phase -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Project Phase</label>
                    <select id="filterProjectPhase" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Phase -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Phase</label>
                    <select id="filterPhase" class="filter-field">
                        <option value="">-- Tất cả --</option>
                    </select>
                </div>

                <!-- Tìm kiếm -->
                <div class="group">
                    <label class="block text-xs font-black uppercase tracking-widest text-gray-400 mb-2 ml-2">Tìm
                        kiếm</label>
                    <div class="relative">
                        <input type="text" id="searchInput" placeholder="Tên ..."
                            class="filter-field pr-12">
                        <svg xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400 absolute right-3 sm:right-4 top-1/2 -translate-y-1/2" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row flex-wrap gap-3 sm:gap-4 mt-5 sm:mt-6">
                <button onclick="applyFilters()" class="action-btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                    Áp dụng bộ lọc
                </button>
                <button onclick="resetFilters()" class="action-btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Đặt lại
                </button>
                <button onclick="exportToExcel()" class="action-btn-secondary sm:ml-auto">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Xuất Excel
                </button>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6 mb-6 md:mb-8">
            <div class="bg-white rounded-xl md:rounded-2xl p-4 sm:p-5 md:p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="min-w-0 flex-1">
                        <p class="text-[10px] sm:text-xs font-black uppercase tracking-wider text-gray-400 mb-1 truncate">Tổng bản ghi</p>
                        <p class="text-xl sm:text-2xl md:text-3xl font-black text-gray-900" id="totalRecords">0</p>
                    </div>
                    <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-red-50 rounded-lg md:rounded-xl flex items-center justify-center flex-shrink-0 ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-red-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl md:rounded-2xl p-4 sm:p-5 md:p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="min-w-0 flex-1">
                        <p class="text-[10px] sm:text-xs font-black uppercase tracking-wider text-gray-400 mb-1 truncate">Nhân viên</p>
                        <p class="text-xl sm:text-2xl md:text-3xl font-black text-gray-900" id="totalStaff">0</p>
                    </div>
                    <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-blue-50 rounded-lg md:rounded-xl flex items-center justify-center flex-shrink-0 ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-blue-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl md:rounded-2xl p-4 sm:p-5 md:p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="min-w-0 flex-1">
                        <p class="text-[10px] sm:text-xs font-black uppercase tracking-wider text-gray-400 mb-1 truncate">Dự án</p>
                        <p class="text-xl sm:text-2xl md:text-3xl font-black text-gray-900" id="totalProjects">0</p>
                    </div>
                    <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-green-50 rounded-lg md:rounded-xl flex items-center justify-center flex-shrink-0 ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-green-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl md:rounded-2xl p-4 sm:p-5 md:p-6 shadow-[0_10px_30px_rgba(0,0,0,0.06)] border border-gray-100">
                <div class="flex items-center justify-between">
                    <div class="min-w-0 flex-1">
                        <p class="text-[10px] sm:text-xs font-black uppercase tracking-wider text-gray-400 mb-1 truncate">Tổng giờ</p>
                        <p class="text-xl sm:text-2xl md:text-3xl font-black text-gray-900" id="totalHours">0</p>
                    </div>
                    <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-purple-50 rounded-lg md:rounded-xl flex items-center justify-center flex-shrink-0 ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-purple-600" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div class="bg-white rounded-2xl md:rounded-[2.5rem] shadow-[0_10px_30px_rgba(0,0,0,0.06)] md:shadow-[0_20px_60px_rgba(0,0,0,0.08)] border border-gray-100 overflow-hidden">
            <!-- Table Header -->
            <div class="px-4 sm:px-6 md:px-8 lg:px-10 py-5 sm:py-6 md:py-8 border-b border-gray-100">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                    <div>
                        <h3 class="text-xl sm:text-2xl font-black text-gray-900">Danh sách bản ghi</h3>
                        <p class="text-xs sm:text-sm text-gray-500 mt-1">
                            Hiển thị <span id="showingRecords" class="font-bold text-gray-900">0</span> bản ghi
                        </p>
                    </div>
                    <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 w-full sm:w-auto">
                        <select id="recordsPerPage" onchange="changeRecordsPerPage()"
                            class="w-full sm:w-auto px-3 sm:px-4 py-2 sm:py-2.5 bg-gray-50 border-2 border-gray-200 rounded-lg sm:rounded-xl text-xs sm:text-sm font-semibold text-gray-700 focus:outline-none focus:border-red-600">
                            <option value="10">10 / trang</option>
                            <option value="25" selected>25 / trang</option>
                            <option value="50">50 / trang</option>
                            <option value="100">100 / trang</option>
                        </select>
                        <button onclick="sortTable('WorkDate')" class="sort-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                            </svg>
                            <span class="hidden sm:inline">Sắp xếp</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Desktop Table View -->
            <div class="hidden lg:block overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="table-header">SVN Code</th>
                            <th class="table-header">Nhân viên</th>
                            <th class="table-header">Bộ phận</th>
                            <th class="table-header">Customer</th>
                            <th class="table-header">Dự án</th>
                            <th class="table-header">Project Phase</th>
                            <th class="table-header">Phase</th>
                            <th class="table-header">Năm</th>
                            <th class="table-header">Tuần</th>
                            <th class="table-header">Ngày làm việc</th>
                            <th class="table-header">Giờ</th>
                            <th class="table-header">Người tạo</th>
                            <th class="table-header">Ngày tạo</th>
                            <th class="table-header text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="dataTableBody">
                        <!-- Data will be inserted here by JavaScript -->
                    </tbody>
                </table>
            </div>

            <!-- Mobile/Tablet Card View -->
            <div class="lg:hidden" id="mobileDataView">
                <!-- Data will be inserted here by JavaScript -->
            </div>

            <!-- Pagination -->
            <div class="px-4 sm:px-6 md:px-8 lg:px-10 py-5 sm:py-6 border-t border-gray-100">
                <div class="flex flex-wrap items-center justify-center gap-2" id="paginationContainer">
                    <!-- Pagination buttons will be inserted here by JavaScript -->
                </div>
            </div>
        </div>

        <!-- Back to Home Button -->
        <div class="flex justify-center mt-8 md:mt-12 mb-8">
            <a href="/" class="inline-flex items-center gap-2 px-6 sm:px-8 py-3 sm:py-4 bg-gray-900 text-white rounded-xl sm:rounded-2xl font-bold text-sm sm:text-base shadow-lg hover:bg-gray-800 transition-all duration-300 hover:scale-105">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Về trang chủ
            </a>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="hidden fixed inset-0 bg-black/40 backdrop-blur-sm z-50 items-center justify-center p-4">
    <div class="bg-white rounded-2xl md:rounded-3xl p-6 sm:p-8 md:p-12 max-w-md w-full shadow-2xl animate-scale-up">
        <div class="w-16 h-16 sm:w-20 sm:h-20 bg-red-50 rounded-2xl flex items-center justify-center mx-auto mb-5 sm:mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 sm:h-10 sm:w-10 text-red-600" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        <h3 class="text-2xl sm:text-3xl font-black mb-3 sm:mb-4 tracking-tight text-center">Xác nhận xóa?</h3>
        <p class="text-gray-500 text-sm sm:text-base md:text-lg mb-8 sm:mb-10 leading-relaxed text-center">Bạn có chắc chắn muốn xóa bản ghi này không? Hành động
            này không thể hoàn tác.</p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-5">
            <button onclick="closeDeleteModal()"
                class="flex-1 py-3 sm:py-4 border-2 border-gray-100 rounded-xl sm:rounded-2xl font-bold text-sm sm:text-base text-gray-400 hover:bg-gray-50 transition-all">
                Hủy
            </button>
            <button onclick="confirmDelete()"
                class="flex-1 py-3 sm:py-4 bg-red-600 text-white rounded-xl sm:rounded-2xl font-bold text-sm sm:text-base shadow-xl shadow-red-100 hover:bg-red-700 transition-all">
                Xóa
            </button>
        </div>
    </div>
</div>

<style>
    .filter-field {
        width: 100%;
        padding: 0.75rem 1rem;
        background-color: #f9fafb;
        border: 2px solid transparent;
        border-radius: 0.875rem;
        outline: none;
        transition: all 0.3s;
        font-size: 0.875rem;
        color: #374151;
        font-weight: 500;
    }

    @@media (min-width: 640px) {
        .filter-field {
            padding: 0.875rem 1.25rem;
            border-radius: 1rem;
            font-size: 0.95rem;
        }
    }

    .filter-field:focus {
        background-color: white;
        border-color: #dc2626;
    }

    .action-btn-primary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background-color: #dc2626;
        color: white;
        border-radius: 0.875rem;
        font-weight: 700;
        font-size: 0.85rem;
        transition: all 0.3s;
        box-shadow: 0 8px 20px rgba(220, 38, 38, 0.15);
        width: 100%;
    }

    @@media (min-width: 640px) {
        .action-btn-primary {
            padding: 0.875rem 1.75rem;
            border-radius: 1rem;
            font-size: 0.9rem;
            width: auto;
            box-shadow: 0 10px 25px rgba(220, 38, 38, 0.15);
        }
    }

    .action-btn-primary:hover {
        background-color: #b91c1c;
        transform: translateY(-2px);
        box-shadow: 0 15px 35px rgba(220, 38, 38, 0.25);
    }

    .action-btn-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background-color: white;
        color: #374151;
        border: 2px solid #e5e7eb;
        border-radius: 0.875rem;
        font-weight: 700;
        font-size: 0.85rem;
        transition: all 0.3s;
        width: 100%;
    }

    @@media (min-width: 640px) {
        .action-btn-secondary {
            padding: 0.875rem 1.75rem;
            border-radius: 1rem;
            font-size: 0.9rem;
            width: auto;
        }
    }

    .action-btn-secondary:hover {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .sort-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        background-color: white;
        color: #6b7280;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-weight: 600;
        font-size: 0.8rem;
        transition: all 0.3s;
    }

    @@media (min-width: 640px) {
        .sort-btn {
            padding: 0.625rem 1.25rem;
            border-radius: 0.875rem;
            font-size: 0.85rem;
        }
    }

    .sort-btn:hover {
        border-color: #dc2626;
        color: #dc2626;
        background-color: #fef2f2;
    }

    .table-header {
        padding: 0.875rem 1rem;
        text-align: left;
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #6b7280;
    }

    @@media (min-width: 1024px) {
        .table-header {
            padding: 1rem 1.5rem;
            font-size: 0.75rem;
        }
    }

    .table-cell {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f3f4f6;
        font-size: 0.875rem;
        color: #374151;
    }

    .table-row {
        transition: all 0.2s;
    }

    .table-row:hover {
        background-color: #fef2f2;
    }

    .badge {
        display: inline-block;
        padding: 0.3rem 0.7rem;
        border-radius: 0.625rem;
        font-size: 0.75rem;
        font-weight: 700;
        white-space: nowrap;
    }

    @@media (min-width: 640px) {
        .badge {
            padding: 0.375rem 0.875rem;
            border-radius: 0.75rem;
            font-size: 0.8rem;
        }
    }

    .badge-red {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .badge-blue {
        background-color: #dbeafe;
        color: #2563eb;
    }

