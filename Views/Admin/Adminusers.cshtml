<script>
    function switchTab(tab) {
        document.getElementById('usersTab').classList.remove('active');
        document.getElementById('logsTab').classList.remove('active');
        document.getElementById('usersContent').classList.add('hidden');
        document.getElementById('logsContent').classList.add('hidden');

        if (tab === 'users') {
            document.getElementById('usersTab').classList.add('active');
            document.getElementById('usersContent').classList.remove('hidden');
        } else if (tab === 'logs') {
            document.getElementById('logsTab').classList.add('active');
            document.getElementById('logsContent').classList.remove('hidden');
        }
    }

    function openResetModal(svnCode) {
        document.getElementById('resetSVNCode').value = svnCode;
        document.getElementById('displaySVNCode').textContent = svnCode;
        document.getElementById('resetPasswordModal').classList.remove('hidden');
        document.getElementById('resetPasswordModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeResetModal() {
        document.getElementById('resetPasswordModal').classList.add('hidden');
        document.getElementById('resetPasswordModal').style.display = 'none';
        document.getElementById('resetForm').reset();
        document.body.style.overflow = 'auto';
    }

    function openPermissionModal(svnCode, currentPermission) {
        document.getElementById('permissionSVNCode').value = svnCode;
        document.getElementById('displayPermissionSVNCode').textContent = svnCode;
        document.getElementById('permissionSelect').value = currentPermission;
        document.getElementById('permissionModal').classList.remove('hidden');
        document.getElementById('permissionModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closePermissionModal() {
        document.getElementById('permissionModal').classList.add('hidden');
        document.getElementById('permissionModal').style.display = 'none';
        document.getElementById('permissionForm').reset();
        document.body.style.overflow = 'auto';
    }

    // Close modals when clicking outside
    document.getElementById('resetPasswordModal')?.addEventListener('click', function (e) {
        if (e.target === this) closeResetModal();
    });

    document.getElementById('permissionModal')?.addEventListener('click', function (e) {
        if (e.target === this) closePermissionModal();
    });

    // Close modal on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeResetModal();
            closePermissionModal();
        }
    });

    // Auto switch to logs tab if filter params present
    window.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('svnCodeFilter') || urlParams.has('actionTypeFilter') || 
            urlParams.has('fromDate') || urlParams.has('toDate') || urlParams.has('page')) {
            switchTab('logs');
        }
    });
</script>
