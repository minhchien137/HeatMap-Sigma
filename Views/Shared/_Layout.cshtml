<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heatmap System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #f8fafc;
        }

        /* Gradient chuyên nghiệp cho các thành phần con */
        .bg-heatmap-gradient {
            background: linear-gradient(145deg, #450a0a 0%, #991b1b 50%, #dc2626 100%);
        }

        .animate-fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body class="min-h-screen flex flex-col">
    <!-- Header: Đã giảm py-6 xuống py-2 để thanh header mỏng và tinh tế hơn -->
    <header
        class="bg-white/95 backdrop-blur-md border-b border-gray-100 py-2 px-4 md:px-8 lg:px-12 flex justify-between items-center sticky top-0 z-50 shadow-sm">
        <div class="flex items-center">
            <a href="/" class="flex items-center transition-transform hover:scale-105 active:scale-95">
                <!-- Logo được điều chỉnh kích thước để phù hợp với header mỏng -->
                <img src="~/images/logo.png" alt="Heatmap Logo" class="h-12 md:h-16 w-auto object-contain"
                    onerror="this.onerror=null; this.src='https://placehold.co/120x60/dc2626/white?text=LOGO'" />
            </a>
        </div>
        <div
            class="text-black font-black text-xl md:text-3xl uppercase tracking-[0.5em] md:tracking-[0.8em] select-none pr-2">
            Heatmap
        </div>
    </header>

    <!-- Main Content: Nơi RenderBody chứa nội dung DangNhap hoặc DangKy -->
    <main role="main" class="flex-grow flex items-center justify-center p-6 md:p-12 lg:p-16">
        @RenderBody()
    </main>

    <!-- Footer: Thiết kế tối giản, chuyên nghiệp -->
    <footer class="py-12 text-center text-gray-400 text-[10px] md:text-xs uppercase tracking-[0.4em] font-black">
        &copy; @DateTime.Now.Year HEATMAP SIGMA • COLDZY
    </footer>

    @RenderSection("Scripts", required: false)
</body>

</html>